@model LearningASP.Models.OrderViewModel

@{
    ViewBag.Title = "Order Info";
}

<h2>Order Information!</h2>

<div>
    <hr />
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <div class="row">
                <div class="col-md-6">
                    <label>Customer ID</label>
                    <h2>@Model.CustomerID</h2>
                </div>
                <div class="col-md-6">
                    <label>Customer Name</label>
                    <h2>@Model.CustomerName</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Total Price</label>
                    <h2>@Model.TotalPrice</h2>
                </div>
                <div class="col-md-6">
                    <label>Quantity</label>
                    <h2>@Model.Quantity</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label>Order Date</label>
                    <h2>@Model.OrderDate.ToShortDateString()</h2>
                </div>
                <div class="col-md-6">
                    <label>Status</label>
                    <h2>@Model.Status</h2>
                </div>
            </div>
            @if (Model.Description != "")
            {
                <div class="row">
                    <div class="col-md-12">
                        <label>Description</label>
                        <h2>@Model.Description</h2>
                    </div>
                </div>
            }
            <div class="table-responsive">
                <table>
                    <tr>
                        <th>No.</th>
                        <th>Item Name</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Sub Total</th>
                    </tr>
                    @{
                        var count = 0;
                    }
                    @foreach (var item in Model.Items)
                    {
                        <tr>
                            <td>@count++;</td>
                            <td>@item.ItemNam</td>
                            <td></td>
                            <td></td>
                            <td></td>
                        </tr>
                    }

                </table>
            </div>
        </div>
    </div>
</div>

