@using LearningASP.Models;
@model List<OrderViewModel>

@{
    ViewBag.Title = "Index";
}

    <div class="container">

        <div class="row ">
            <div class="col-md-12">
                <h2>
                    All Orders<a class="pull-right" href="@Url.Action("Create","Order")"><span class=" btn btn-sm btn-primary">Add Order</span></a>
                </h2>
                <table class="table">
                    <tr>
                        <th>
                            Customer Name
                        </th>
                        <th>
                           Order Date
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            TotalPrice
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Status
                        </th>
                        <th>Actions</th>
                    </tr>
                    @*To be continued*@
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.CustomerID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.OrderDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalPrice)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Status)
                            </td>
                            <td>
                                <a href="@Url.Action("Edit","Order", new { id = item.OrderID }))">Edit</a>
                                <a href="@Url.Action("Delete","Order", new { id = item.OrderID }))">Delete</a>

                            </td>
                        </tr>
                    }

                </table>
                </div>
            </div>
        </div>
